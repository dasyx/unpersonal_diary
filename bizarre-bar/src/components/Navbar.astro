<nav class="bg-white border-gray-200 dark:bg-gray-900">
  <div
    class="navbar-nav max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="https://flowbite.com/" class="navbar-brand flex items-center">
      <img
        src="/images/logo-red.png"
        class="navbar-logo h-8"
        alt="Flowbite Logo"
      />
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >Impersonal Diary</span
      >
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="toggle-button inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:flex-row md:space-x-8 md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        <li>
          <a
            href="#"
            class="block py-2 pl-3 pr-4 text-white bg-red-700 rounded md:bg-transparent md:text-red-700 md:p-0 dark:text-white md:dark:text-red-500"
            aria-current="page">Accueil</a
          >
        </li>
        <li>
          <a
            href="#"
            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-red-700 md:p-0 dark:text-white md:dark:hover:text-red-500 dark:hover:bg-lightred-700 dark:hover:text-white md:dark:hover:bg-transparent"
            >A propos</a
          >
        </li>
        <li>
          <a
            href="#"
            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-red-700 md:p-0 dark:text-white md:dark:hover:text-red-500 dark:hover:bg-lightred-700 dark:hover:text-white md:dark:hover:bg-transparent"
            >Services</a
          >
        </li>
        <li>
          <a
            href="#"
            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-red-700 md:p-0 dark:text-white md:dark:hover:text-red-500 dark:hover:bg-lightred-700 dark:hover:text-white md:dark:hover:bg-transparent"
            >Contact</a
          >
        </li>
        <li>
          <a
            href="#"
            class="block py-2 pl-3 pr-4 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-red-700 md:p-0 dark:text-white md:dark:hover:text-red-500 dark:hover:bg-lighred-700 dark:hover:text-white md:dark:hover:bg-transparent"
            >Se connecter</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  .navbar-logo {
    padding-top: 12px;
    height: 80px;
  }

  @media screen and (max-width: 768px) {
    .navbar-brand,
    .navbar-nav {
      flex-direction: column;
    }
    .navbar-logo {
      padding-top: 0;
      height: 60px;
      margin-left: 10px;
    }
    .navbar-brand {
      margin-bottom: 20px;
    }
    /* Style pour le menu déroulant caché par défaut */
    #navbar-default {
      position: absolute; /* ou relative selon vos besoins */
      z-index: 1000; /* une valeur élevée pour apparaître au-dessus des autres éléments */
      display: none; /* caché par défaut */
      top: 150px;
    }
    /* Style pour le menu déroulant visible */
    #navbar-default.visible {
      display: block; /* ou une autre valeur appropriée pour le rendre visible */
    }

    /* Style pour le contenu qui suit le menu déroulant */
    .content {
      position: relative;
      z-index: 900; /* une valeur plus basse que le menu déroulant */
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Ciblez le bouton et le menu avec leurs sélecteurs respectifs
    var button = document.querySelector(
      '[data-collapse-toggle="navbar-default"]'
    );
    var menu = document.getElementById("navbar-default");

    // Utilisez l'opérateur de chaînage optionnel pour éviter les erreurs si les éléments sont null
    button?.addEventListener("click", function () {
      // Utilisez également l'opérateur de chaînage optionnel ici pour éviter les erreurs si menu est null
      menu?.classList.toggle("visible");

      // (Optionnel) Changez l'aria-expanded attribut pour l'accessibilité
      var isExpanded = button.getAttribute("aria-expanded") === "true";
      // @ts-ignore
      button.setAttribute("aria-expanded", !isExpanded);
    });
  });
</script>
